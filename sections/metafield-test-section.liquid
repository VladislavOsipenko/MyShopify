<div class="page-width metafield-test-section__section" ">

  {% if page.metafields.global.single_line_subtitle.value != blank %}
    <hr>
    <h3>
      page.metafields.global.single_line_subtitle.value</h3>
    <br>
    <b>{{ page.metafields.global.single_line_subtitle.type }}</b>
    <br>
    {{ page.metafields.global.single_line_subtitle.value }}
  {% endif %}

  {% if page.metafields.global.multi_line_additional_content.value != blank %}
    <hr>
    <h3>
      page.metafields.global.multi_line_additional_content.value</h3>
    <br>
    <b>{{ page.metafields.global.multi_line_additional_content.type }}</b>
    <br>
    {{ page.metafields.global.multi_line_additional_content.value }}
  {% endif %}

  {% if page.metafields.global.integer_content.value != blank %}
    <hr>
    <h3>
      page.metafields.global.integer_content.value</h3>
    <br>
    <b>{{ page.metafields.global.integer_content.value }}</b>
    <br>
    {{ page.metafields.global.integer_content.value }}
  {% endif %}

  {% if page.metafields.global.date_content.value != blank %}
    <hr>
    <h3>
      page.metafields.global.date_content.value</h3>
    <br>
    <b>{{ page.metafields.global.date_content.value | json }}</b>
    <b>{{ page.metafields.global.date_content.type }}</b>
    <br>
    {{ page.metafields.global.date_content.value }} == {{ page.metafields.global.date_content.value | time_tag: '%B %d, %Y', datetime: '%Y-%m-%d' }}
  {% endif %}

  {% if page.metafields.global.weight_content.value != blank %}
    <hr>
    <h3>
      page.metafields.global.weight_content.value</h3>
    <br>
    <b>{{ page.metafields.global.weight_content.value }}</b>
    <br>
    {{ page.metafields.global.weight_content.value }}
  {% endif %}

  {% if page.metafields.global.liquid_content.value != blank %}
    <hr>
    <h3>
      page.metafields.global.liquid_content.value</h3>
    <br>
    <b>{{ page.metafields.global.liquid_content.value }}</b>
    <br>
    {{ page.metafields.global.liquid_content.value }}
  {% endif %}

  {% if page.metafields.global.color_content.value != blank %}
    <hr>
    <h3>
      page.metafields.global.color_content.value</h3>
    <br>
    <b>{{ page.metafields.global.color_content.value }}</b>
    <b style="color: {{ page.metafields.global.color_content.value }}">{{ page.metafields.global.color_content.value }}</b>
    <br>
    {{ page.metafields.global.color_content.value }}
  {% endif %}

  {% if page.metafields.global.money_content.value != blank %}
    <hr>
    <h3>
      page.metafields.global.money_content.value</h3>
    <br>
    <b>{{ page.metafields.global.money_content.value }}</b>
    <br>
    {{ page.metafields.global.money_content.value | money_with_currency }}
  {% endif %}

  {% if page.metafields.global.url_content.value != blank %}
    <hr>
    <h3>
      page.metafields.global.url_content.value</h3>
    <br>
    <b>{{ page.metafields.global.url_content.value }}</b>
    <br>
    <a href="{{ page.metafields.global.url_content.value }}">{{ page.metafields.global.url_content.value | remove: 'tel:' | remove: 'mailto' }}</a>

  {% endif %}

  {% if page.metafields.global.file_content.value != blank %}
    <hr>
    <h3>
      <h3>
      page.metafields.global.file_content.value</h3>
    <br>
    <b>{{ page.metafields.global.file_content.value }}</b>
    <br>
    {{ page.metafields.global.file_content.value }}
  {% endif %}

  {% if page.metafields.global.product_recommendet.value != blank %}
    <hr>
    <h3>
      page.metafields.global.product_recommendet.value</h3>
    <br>
    <b>{{ page.metafields.global.product_recommendet.value }}</b>
    <br>
    {{ page.metafields.global.product_recommendet.value }}
    <pre>
        <a href="{{ page.metafields.global.product_recommendet.value.url }}" target="_blank">{{ page.metafields.global.product_recommendet.value.title }} == {{ page.metafields.global.product_recommendet.value.price | money_with_currency }}</a>
    </pre>
  {% endif %}

  {% if page.metafields.global.page_recommendet.value != blank %}
    <hr>
    <h3>
      page.metafields.global.page_recommendet.value</h3>
    <br>
    <b>{{ page.metafields.global.page_recommendet.value }}</b>
    <br>
    {{ page.metafields.global.page_recommendet.value }}
    <pre>
        <a href="{{ page.metafields.global.page_recommendet.value.url }}" target="_blank">{{ page.metafields.global.page_recommendet.value.title }}</a>
    </pre>
    <p>{{ page.metafields.global.page_recommendet.value.content }}</p>
  {% endif %}

  {% if page.metafields.global.variant_recommendet.value != blank %}
    <hr>
    <h3>
      page.metafields.global.variant_recommendet.value</h3>
    <br>
    <b>{{ page.metafields.global.variant_recommendet.value }}</b>
    <br>
    {{ page.metafields.global.variant_recommendet.value }}
    <pre>
        <a href="{{ page.metafields.global.variant_recommendet.value.url }}" target="_blank">{{ page.metafields.global.variant_recommendet.value.title }} == {{ page.metafields.global.variant_recommendet.value.price | money_with_currency }}</a>
    </pre>
  {% endif %}

  <hr>
  {% if page.metafields.global.collection_recommendet_1.value != blank %}
    <hr>
    <h3>
      page.metafields.global.collection_recommendet_1.value</h3>
    <br>
    <b>{{ page.metafields.global.collection_recommendet_1.value }}</b>
    <br>
    {{ page.metafields.global.collection_recommendet_1.value }}
    <pre>
        <a href="{{ page.metafields.global.collection_recommendet_1.value.url }}" target="_blank">{{ page.metafields.global.collection_recommendet_1.value.title }} </a>
    </pre>
  {% endif %}
  <hr><hr>
  <div class="collection_recommendet">
    <div class="tab">
      <div class="tab__heading">
        <ul class="list">
          {% assign first_tab = true %}
          {% for i in (1..6) %}
            {% assign count_name = 'collection_recommendet_' | append: i %}
            {% assign collection_obj = page.metafields.global[count_name].value %}
            {% if collection_obj.all_products_count > 0 %}
              <li class="list__item {% if first_tab == true %}active{% endif %}">
                <a href="#" class="list__link">{{ collection_obj.title }} - {{ i }}</a>
              </li>
              {% if first_tab == true %}
                {% assign first_tab = false %}
              {% endif %}
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      <div class="tab__body">
        <ul class="list">
          {% assign first_tab = true %}
          {% for i in (1..6) %}
            {% assign count_name = 'collection_recommendet_' | append: i %}
            {% assign collection_obj = page.metafields.global[count_name].value %}
            {% if collection_obj.all_products_count > 0 %}
              <li class="list__item {% if first_tab == true %}active{% endif %}">
                <ul>
                  {% for product in collection_obj.products limit: 5 %}
                    <li>{{ product.title }}</li>
                  {% endfor %}
                </ul>
              </li>
              {% if first_tab == true %}
                {% assign first_tab = false %}
              {% endif %}
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
    <style>
      .list {
        list-style-type: none;
      }

      .list__link {
        text-decoration: none;
        color: #000;
      }

      .tab {
        max-width: 800px;
        margin: 0 auto;
        border: 2px solid #f1f1f1;
      }

      .tab__heading {
        background-color: #f1f1f1;
      }

      .tab__heading .list__item {
        display: inline-block;
        padding: 10px 15px;
      }

      .tab__heading .list__item:not(:last-of-type) {
        margin-right: 15px;
      }

      .tab__heading .list__item.active {
        background-color: #616161;
      }

      .tab__heading .list__item.active .list__link {
        color: #fff;
      }

      .tab__heading .list__link {
        font-weight: 700;
      }

      .tab__body {
        padding: 10px 15px;
      }

      .tab__body .list__item {
        display: none;
      }

      .tab__body .list__item.active {
        display: block;
      }
    </style>
  </div>
</div>



{% schema %}
  {
    "name": "Metafield Test Section",
    "tag": "section",
    "class": "section metafield-test-section",
    "settings": [],
    "presets": [
      {
        "name": "Metafield Test Section"
      }
    ]
  }
{% endschema %}