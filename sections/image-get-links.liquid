      </div>
      <div id="get_image_v_4_1 " style="border: 1px solid lightblue;">
        'shopify-icon.svg' | asset_url = {{ 'shopify-icon.svg' | asset_url }}
        <br>
        'shopify-icon.svg' | asset_img_url: '200x' = {{ 'shopify-icon.svg' | asset_img_url: '200x' | asset_url }}
        <br>
        <img src=" {{ 'shopify-icon.svg' | asset_url }} " alt="">
        <br>
        <img src="{{ 'shopify-icon.svg' | asset_img_url: '50x' }}" alt="">
        <br>
        {{ 'shopify-icon.svg' | asset_url | img_tag }}
      </div>
    </div>
  </div>

  {% comment %} Пятый способ, через снипеты {% endcomment %}
  <div id="get_image_v_5">
    <h2>get_image_v_5- assets</h2>
    <div style="border: 1px solid yellow;">
      {% comment %} Новый метод {% endcomment %}
      {% render 'icon-shopify-snippets' %}
      <br>
      {% comment %} Старый метод {% endcomment %}
      {% include 'icon-shopify-snippets' %}
      <div class="svg-image" >
        {% render 'icon-shopify-snippets'%}
      </div>
      <style>
        .svg-image  {
          height: 50px;
          width: 50px;
        }
        .svg-image svg {
          height: inherit;
          width: inherit;
          display: flex;
          justify-content: center;
          align-items: center;
        }
      </style>
    </div>
  </div>

</div>
<div id="get_image_v_1_1S"></div>
{% schema %}
  {
    "name": "Image get Links",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "get_image_v_1",
        "label": "Get Image V1"
      }, {
        "type": "image_picker",
        "id": "get_image_v_2",
        "label": "image picker without image"
      }
    ],
    "presets": [
      {
        "name": "Image get Links"
      }
    ]
  }
{% endschema %}