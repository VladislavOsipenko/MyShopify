<div class="page-width section-all-input-types__block">
  <h2>Text Fields</h2>
  <div>
    {% raw %}
      {{ section.settings.input_text }}
    {% endraw %}
    {{ section.settings.input_text }}
  </div>
  <div>
    {% raw %}
      {{ section.settings.input_textarea }}
    {% endraw %}
    {{ section.settings.input_textarea }}
  </div>
  <div>
    {% raw %}
      {{ section.settings.input_richtext }}
    {% endraw %}
    {{ section.settings.input_richtext }}
  </div>
  <div>
    {% raw %}
      {{ section.settings.input_inline_richtext }}
    {% endraw %}
    {{ section.settings.input_inline_richtext }}
  </div>
  <div>
    {% raw %}
      {{ section.settings.input_html }}
    {% endraw %}
    {{ section.settings.input_html }}
  </div>
  <div>
    {% raw %}
      {{ section.settings.input_liquid }}
    {% endraw %}
    {{ section.settings.input_liquid }}
  </div>
</div>
<div class="page-width section-all-input-types__block">
  <h2>NUMBER Fields</h2>
  <div>
    {% raw %}
      {{ section.settings.input_number }}
    {% endraw %}
    {{ section.settings.input_number }}
  </div>
  <div style="height: {{ section.settings.input_range }}px; background-color: pink;"">
    {% raw %}
      {{ section.settings.input_range }}
    {% endraw %}
    {{ section.settings.input_range }}
  </div>
</div>
<div class="page-width section-all-input-types__block">
  <h2>READY Fields</h2>
  <div style="background-color: {{ section.settings.input_radio }}; color: {{ section.settings.input_select }}">
    TEXT
    {% if section.settings.input_checkbox == true %}
      + EXTRA TEXT

    {% endif %}
  </div>

</div>
<div class="page-width section-all-input-types__block">
  <h2>LINKS Fields</h2>
  <a href="{{ section.settings.input_url }}">{{ section.settings.input_url }}</a>
  {% assign input_linklist = section.settings.input_menu %}
  {% if input_linklist.links.size > 0 %}
    <ul>
      {% for link in input_linklist.links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
          {% if link.links.size > 0 %}
            <ul>
              {% for child_link in link.links %}
                <li>
                  <a href="{{ child_link.url }}">{{ child_link.title }}</a>
                  {% if child_link.links.size > 0 %}
                    <ul>
                      {% for child_child_link in child_link.links %}
                        <li>
                          <a href="{{ child_child_link.url }}">{{ child_child_link.title }}</a>
                        </li>

                      {% endfor %}
                    </ul>
                  {% endif %}
                </li>

              {% endfor %}
            </ul>
          {% endif %}
        </li>

      {% endfor %}
    </ul>
  {% endif %}
  <div class="page-width section-all-input-types__block section-all-input-types__block--color">
    <h2>Design Fields</h2>
